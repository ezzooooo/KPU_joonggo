<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   android:layout_gravity="center"
    tools:context="Joonggo.Activity.SearchSettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/background">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="100dp"
        >

        <TextView
            android:text="정렬순서"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"/>

        <Button
            android:id="@+id/setting_newest"
            android:text="최신순"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/rounded_primary"
            android:onClick="setting_sort"
            />

        <Button
            android:id="@+id/setting_lowprice"
            android:text="낮은가격순"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/rounded_serchsetting"
            android:onClick="setting_sort"/>

        <Button
            android:id="@+id/setting_highprice"
            android:text="높은가격순"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_serchsetting"
            android:onClick="setting_sort"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:text="상품상태"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <Button
            android:id="@+id/setting_wholeproduct"
            android:text="전체"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/rounded_primary"
            android:onClick="setting_stat"/>

        <Button
            android:id="@+id/setting_newproduct"
            android:text="새상품"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/rounded_serchsetting"
            android:onClick="setting_stat"/>

        <Button
            android:id="@+id/setting_almostnewproduct"
            android:text="거의 새상품"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="@drawable/rounded_serchsetting"
            android:onClick="setting_stat"/>

        <Button
            android:id="@+id/setting_usedproduct"
            android:text="중고"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_serchsetting"
            android:onClick="setting_stat"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:text="판매가격"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginRight="3dp"/>

        <EditText
            android:layout_weight="1"
            android:inputType="number"
            android:id="@+id/setting_minprice"
            android:hint="최소가격"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="number"
            android:layout_weight="1"
            android:id="@+id/setting_maxprice"
            android:hint="최대가격"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/setting_clear"
            android:layout_weight="1"
            android:text="초기화"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_product"/>

        <Button
            android:id="@+id/setting_commit"
            android:text="적용하기"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_product"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/applogo_market"
        android:layout_marginTop="70dp"/>

    </LinearLayout>
</LinearLayout>