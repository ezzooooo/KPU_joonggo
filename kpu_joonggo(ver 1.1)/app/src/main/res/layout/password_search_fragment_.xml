<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Joonggo.Fragment.PasswordSearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="아이디"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/idText"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_register"
                android:drawableLeft="@drawable/ic_person_register_black_24dp"
                android:drawableStart="@drawable/ic_person_register_black_24dp"
                android:hint=" ID"
                android:padding="10dp"
                android:textColor="#0b253d"
                android:textColorHint="#63686c" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="이메일 주소"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailText"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_register"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                android:hint=" email@kpu.ac.kr"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#63686c" />

        </LinearLayout>

        <Button
            android:id="@+id/EnterButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_product"
            android:text="확인하기"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="'확인하기' 버튼을 누르면 인증번호가 이메일로 전송됩니다."
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countText"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="03:00"
                android:textAlignment="center"
                android:textSize="20dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/numberEdit"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:background="#164f83"
                android:drawableLeft="@drawable/ic_verified_user_black_24dp"
                android:drawableStart="@drawable/ic_verified_user_black_24dp"
                android:hint=" 인증번호를 입력하세요.      "
                android:inputType="numberPassword"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="15dp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/RetryButton"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="110dp"
                android:background="@drawable/rounded_primarydark"
                android:text="재전송"
                android:visibility="invisible"
                android:textAlignment="center"
                android:textColor="#ffffff"
                />

            <Button
                android:id="@+id/Enter2Button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_primarydark"
                android:text="확인"
                android:visibility="invisible"
                android:textAlignment="center"
                android:textColor="#ffffff"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>